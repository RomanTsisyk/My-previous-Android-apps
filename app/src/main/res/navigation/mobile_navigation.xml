<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="tsisyk.app.kanbanboard.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_addNewNoteFragment"
            app:destination="@+id/addNewNoteFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="tsisyk.app.kanbanboard.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="tsisyk.app.kanbanboard.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/addNewNoteFragment"
        android:name="tsisyk.app.kanbanboard.ui.AddNewtaskFragment"
        android:label="fragment_add_new_note"
        tools:layout="@layout/fragment_add_new_task" >
        <action
            android:id="@+id/action_addNewNoteFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
</navigation>